#!/bin/bash
#
# YouTube Segment Downloader - Quick CLI Wrapper
# 
# Usage: ./yt-clip <youtube_url> <start_time> <end_time> [output_name]
#
# Examples:
#   ./yt-clip "https://youtu.be/dQw4w9WgXcQ" "0:30" "1:45"
#   ./yt-clip "https://youtu.be/dQw4w9WgXcQ" "1:20" "2:30" "my_favorite_part"
#

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Execute the Python script
python3 "$SCRIPT_DIR/yt-segment.py" "$@" 